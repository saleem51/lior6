{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mes commandes</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Adresse</th>
                <th>Date de Commandes</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for p in purchases %}
                <tr>
                    <td>{{ p.id }}</td>
                    <td>{{ p.address }}<br>{{ p.postalCode }}, {{ p.city }}</td>
                    <td>{{ p.purchasedAt | date("m/d/Y") }}</td>
                    <td>{{ p.total / 100 }} €</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block title %}Mes commandes{% endblock %}